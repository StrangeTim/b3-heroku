<%= render "layouts/errors", :object => @artwork %>

<%= bootstrap_form_for [@artist, @artwork] do |f| %>
  <%= f.text_field :name %><br>
  <%= f.text_field :blurb %><br>
  <%= f.text_field :image_description %><br>
  <%= f.file_field :image %>
  <%= check_box_tag(:display_image) %>
  <%= f.submit class: "btn btn-success" %><br>
<% end %>
