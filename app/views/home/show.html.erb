<h1> <%= @title %> </h1>

<% if user_signed_in? %>
  <%= link_to "Edit Home Page", edit_home_path(@home), class: "btn btn-sm btn-warning" %>
<% end %>

<div class="jumbotron">
  <div id="myCarousel" class="carousel slide">
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>

    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <img class="image-responsive center-block" src="<%= @carousel[0] %> "alt="carousel image">
      </div>

      <div class="item">
        <img class="image-responsive center-block" src="<%= @carousel[1] %>" alt="carousel image">
      </div>

      <div class="item">
        <img class="image-responsive center-block" src="<%= @carousel[2] %>" alt="carousel image">
      </div>
    </div>

    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span><span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" role= aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<div class="col-md-6 divided-column">
  <h3> <%= @left_header %> </h3>
  <br>
  <p><pre><%= @left_body %> </pre></p>

</div>

<div class="col-md-6">
  <h3> <%= @right_header %> </h3>
  <br>
  <p><pre><%= @right_body %> </pre></p>
</div>
